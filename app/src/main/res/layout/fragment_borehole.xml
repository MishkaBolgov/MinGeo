<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mishka.mingeo.view.pumping.borehole.BoreholeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/chartContainer"
                style="@style/CardViewStyle"
                android:visibility="gone">

                <fragment
                    android:id="@+id/chart_fragment"
                    android:name="mishka.mingeo.view.pumping.borehole.depthchart.DepthChartFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDistance"
                android:layout_below="@id/chartContainer"
                style="@style/CardViewStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/labelDistance"
                        style="@style/CardText.Left"
                        android:text="Расстояние до основной скважины"/>

                    <TextView
                        android:id="@+id/tvDistance"
                        style="@style/CardText.Right"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/label"
                style="@style/LabelStyle.Large"
                android:layout_below="@+id/cardDistance"
                android:text="Замеры" />

            <RelativeLayout
                android:id="@+id/column_header_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label"
                android:orientation="horizontal">

                <TextView
                    style="@style/LabelStyle"
                    android:layout_alignParentStart="true"
                    android:text="Глубина" />

                <TextView
                    style="@style/LabelStyle"
                    android:layout_alignParentEnd="true"
                    android:text="Дата измерения" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvDepths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/column_header_holder"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/round_add_black_24" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mishka.mingeo.view.pumping.borehole.BoreholeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/chartContainer"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp"
                android:visibility="gone">

                <fragment
                    android:id="@+id/chart_fragment"
                    android:name="mishka.mingeo.view.pumping.borehole.depthchart.DepthChartFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDistance"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chartContainer">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/labelDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical|left"
                        android:paddingStart="@dimen/pumpingItemHorizontalPadding"
                        android:paddingTop="@dimen/pumpingItemVerticalPadding"
                        android:paddingBottom="@dimen/pumpingItemVerticalPadding"
                        android:text="Расстояние до основной скважины"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/pumpingItemTextSize" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@id/labelDistance"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:paddingStart="@dimen/pumpingItemHorizontalPadding"
                        android:paddingTop="@dimen/pumpingItemVerticalPadding"
                        android:paddingEnd="@dimen/pumpingItemVerticalPadding"
                        android:paddingBottom="@dimen/pumpingItemVerticalPadding"
                        android:text="6"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/pumpingItemTextSize"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/label"
                style="@style/PrimaryLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardDistance"
                android:gravity="center"
                android:text="Замеры" />

            <LinearLayout
                android:id="@+id/column_header_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label"
                android:orientation="horizontal">

                <TextView
                    style="@style/SecondaryLabelStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Глубина" />

                <TextView
                    style="@style/SecondaryLabelStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Дата измерения" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvDepths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/column_header_holder"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/round_add_black_24" />

</RelativeLayout>

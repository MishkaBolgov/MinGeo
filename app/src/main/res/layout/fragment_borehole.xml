<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mishka.mingeo.view.pumping.borehole.BoreholeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label"
            style="@style/LabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Замеры" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/depths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"></android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/depths">

            <Button
                android:id="@+id/add_depth"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/round_add_black_24" />
        </FrameLayout>
    </RelativeLayout>

</ScrollView>

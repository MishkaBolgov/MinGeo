<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pumping.pumpinginfo.PumpingSummaryFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/chartContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">

                <fragment
                    android:id="@+id/chartFragment"
                    android:name="mishka.mingeo.view.pumping.pumpingsummary.SummaryChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/labelPumpPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical|left"
                        android:paddingStart="@dimen/pumpingItemHorizontalPadding"
                        android:paddingTop="@dimen/pumpingItemVerticalPadding"
                        android:paddingBottom="@dimen/pumpingItemVerticalPadding"
                        android:text="Мощность насоса"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/pumpingItemTextSize" />

                    <TextView
                        android:id="@+id/tvPumpPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@id/labelPumpPower"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:paddingStart="@dimen/pumpingItemHorizontalPadding"
                        android:paddingTop="@dimen/pumpingItemVerticalPadding"
                        android:paddingEnd="@dimen/pumpingItemVerticalPadding"
                        android:paddingBottom="@dimen/pumpingItemVerticalPadding"
                        android:text="6"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/pumpingItemTextSize"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/label"
                style="@style/PrimaryLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chart_fragment"
                android:gravity="center"
                android:text="Скважины" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBoreholesSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
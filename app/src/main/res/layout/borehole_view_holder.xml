<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="@dimen/pumpingItemVerticalMargin"
    android:layout_marginTop="@dimen/pumpingItemVerticalMargin"
    android:layout_marginLeft="@dimen/pumpingItemHorizontalMargin"
    android:layout_marginRight="@dimen/pumpingItemHorizontalMargin"

    android:elevation="@dimen/cardElevation"

    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/boreholeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/pumpingItemTextSize"
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/pumpingItemVerticalPadding"
        android:paddingBottom="@dimen/pumpingItemVerticalPadding"
        android:paddingLeft="@dimen/pumpingItemHorizontalPadding"
        android:textColor="@color/textColorDark"/>

</android.support.v7.widget.CardView>